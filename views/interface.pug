extends layout

mixin multiscripts
    // Phaser dependencies
    link(type='text/javascript' src="phaser.min.js")
    link(type='text/javascript' src="boot.js")
    link(type='text/javascript' src="load.js")
    // End of Phaser dependencies

    // Bootstrap
    link(href="/css/bootstrap.css" rel="stylesheet" type="text/css")
    // JQuery
    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")
    // End of bootstrap dependencies

    // AngularJS
    script(src="/js/angular.js")
    // End of AngularJS

    //Ignite stylesheet
    link(rel='stylesheet', href='/stylesheets/style.css')
    //Retrieves player data
    script(type='text/javascript' src='/javascripts/playerData.js')

mixin header
    nav
        div.container
            div.row
                ul(class='nav nav-pills pull-right')
                        +nav-bullet('home','/')
                        if user
                            +nav-bullet('logout','/accounts/logout')
                            +nav-bullet('account','/accounts')
                        else
                            +nav-bullet('login','/accounts/login')
                            +nav-bullet('sign up','/accounts/register')
                h1
                    a(href='http://35.164.0.62:3000/')#nav-title Ignite
            div.row
                p#nav-message #{message}

mixin nav-bullet(item, link, active)
    if(active)
        li(role='active')
            a(href= link)= item
    else
        li(role='presentation')
            a(href= link)= item
